DHDCFLAGS = -Wall -Wstrict-prototypes -Dlinux -DBCMDRIVER               \
	-DCUSTOMER_HW_ONE -DGSCAN_SUPPORT                                     \
	-DBCMDONGLEHOST -DUNRELEASEDCHIP -DBCMDMA32 -DBCMFILEIMAGE            \
	-DDHDTHREAD -DDHD_DEBUG -DSHOW_EVENTS -DBCMDBG -DCUSTOMER_HW2 -DWLP2P \
	-DWIFI_ACT_FRAME -DARP_OFFLOAD_SUPPORT                                \
	-DKEEP_ALIVE -DGET_CUSTOM_MAC_ENABLE -DPKT_FILTER_SUPPORT             \
	-DEMBEDDED_PLATFORM -DPNO_SUPPORT -DRTT_SUPPORT         \
	-DSET_RANDOM_MAC_SOFTAP -DROAM_ENABLE -DVSDB      \
	-DWL_CFG80211_VSDB_PRIORITIZE_SCAN_REQUEST                            \
	-DESCAN_RESULT_PATCH -DSUPPORT_PM2_ONLY -DWLTDLS                      \
	-DDHD_DONOT_FORWARD_BCMEVENT_AS_NETWORK_PKT	\
	-DMIRACAST_AMPDU_SIZE=8	-DWL_IFACE_COMB_NUM_CHANNELS	\
	-DDHD_SET_FW_HIGHSPEED -DHTC_TX_TRACKING -DSOFTAP -DWLFBT	\
	-DSUPPORT_2G_HT40 -DENABLE_FW_ROAM_SUSPEND	\
	-Idrivers/net/wireless/bcmdhd -Idrivers/net/wireless/bcmdhd/include   \
	-Idrivers/net/wireless/bcmdhd/common/include

DHDOFILES = aiutils.o siutils.o sbutils.o bcmutils.o bcmwifi_channels.o \
	dhd_linux.o dhd_linux_platdev.o dhd_linux_sched.o dhd_pno.o dhd_rtt.o \
	dhd_common.o dhd_ip.o dhd_linux_wq.o dhd_custom_gpio.o \
	bcmevent.o hndpmu.o linux_osl.o wldev_common.o wl_android.o \
	hnd_pktq.o hnd_pktpool.o

obj-$(CONFIG_BCMDHD) += bcmdhd.o
bcmdhd-objs += $(DHDOFILES)
ifneq ($(CONFIG_WIRELESS_EXT),)
bcmdhd-objs += wl_iw.o
DHDCFLAGS += -DSOFTAP -DWL_WIRELESS_EXT -DUSE_IW
endif
ifneq ($(CONFIG_CFG80211),)
bcmdhd-objs += wl_cfg80211.o wl_cfgp2p.o wl_linux_mon.o dhd_cfg80211.o wl_cfg_btcoex.o
DHDCFLAGS += -DWL_CFG80211 -DWL_CFG80211_STA_EVENT -DWL_ENABLE_P2P_IF
DHDCFLAGS += -DCUSTOM_ROAM_TRIGGER_SETTING=-75
DHDCFLAGS += -DCUSTOM_ROAM_DELTA_SETTING=15
DHDCFLAGS += -DCUSTOM_KEEP_ALIVE_SETTING=55000
DHDCFLAGS += -DCUSTOM_PNO_EVENT_LOCK_xTIME=7
DHDCFLAGS += -DWL11U -DMFP
endif
ifneq ($(CONFIG_BCMDHD_VENDOR_EXT),)
bcmdhd-objs += wl_cfgvendor.o bcm_app_utils.o bcmxtlv.o
#DHDCFLAGS += -DWL_VENDOR_EXT_SUPPORT
endif
ifneq ($(CONFIG_DHD_USE_SCHED_SCAN),)
DHDCFLAGS += -DWL_SCHED_SCAN
endif
EXTRA_CFLAGS = $(DHDCFLAGS)
ifeq ($(CONFIG_BCMDHD),m)
EXTRA_LDFLAGS += --strip-debug
else
DHDCFLAGS += -DENABLE_INSMOD_NO_FW_LOAD
DHDCFLAGS += -DMODULE_INIT_ASYNC
endif

ifneq ($(CONFIG_DHD_USE_STATIC_BUF),)
# Use preallocated IOCTL and EVENT buffer
DHDCFLAGS += -DDHD_USE_STATIC_CTRLBUF
#DHDCFLAGS += -DMEM_DEBUG
#DHDCFLAGS += -DMEM_DEBUG_PAGEALLOC
DHDCFLAGS += -DDHD_USE_STATIC_MEMDUMP
DHDCFLAGS += -DDHD_USE_STATIC_PKTIDMAP
DHDCFLAGS += -DDHD_RX_DUMP
DHDCFLAGS += -DDHD_TX_DUMP
DHDCFLAGS += -DDHD_DHCP_DUMP
DHDCFLAGS += -DDHD_8021X_DUMP
endif

#########################
# Chip dependent feature
#########################
ifneq ($(CONFIG_BCM4356),)
DHDCFLAGS += -DDONGLE_ENABLE_ISOLATION
DHDCFLAGS += -DCUSTOM_DHD_WATCHDOG_MS=125
DHDCFLAGS += -DUSE_WL_TXBF
DHDCFLAGS += -DUSE_WL_FRAMEBURST
#DHDCFLAGS += -DDHDTCPACK_SUPPRESS
DHDCFLAGS += -DCUSTOM_AMPDU_BA_WSIZE=64
DHDCFLAGS += -DDISABLE_FRAMEBURST_VSDB
DHDCFLAGS += -DDHD_TXBOUND=32
DHDCFLAGS += -Idrivers/net/wireless/bcmdhd_4356 -Idrivers/net/wireless/bcmdhd_4356/include   \
	-Idrivers/net/wireless/bcmdhd_4356/common/include
endif

ifneq ($(CONFIG_BCM4359),)
DHDCFLAGS += -DDHD_TXBOUND=128
DHDCFLAGS += -DDHD_RXBOUND=128
DHDCFLAGS += -DDONGLE_ENABLE_ISOLATION
DHDCFLAGS += -DCUSTOM_DHD_WATCHDOG_MS=0
DHDCFLAGS += -DUSE_WL_TXBF
DHDCFLAGS += -DUSE_WL_FRAMEBURST
DHDCFLAGS += -DDISABLE_FRAMEBURST_VSDB
DHDCFLAGS += -DDISABLE_PM_BCNRX
DHDCFLAGS += -DCUSTOM_AMPDU_BA_WSIZE=64
DHDCFLAGS += -DCUSTOM_AMPDU_MPDU=48
DHDCFLAGS += -DCUSTOM_AMPDU_RELEASE=32
DHDCFLAGS += -DCUSTOM_AMSDU_AGGSF=2
DHDCFLAGS += -DCUSTOM_TCPACK_SUPP_RATIO=15
DHDCFLAGS += -DCUSTOM_TCPACK_DELAY_TIME=10
DHDCFLAGS += -DDHDTCPACK_SUPPRESS
DHDCFLAGS += -DDHD_LB -DDHD_LB_RXP -DDHD_LB_STATS
DHDCFLAGS += -DDHD_LB_PRIMARY_CPUS=0x0c -DDHD_LB_SECONDARY_CPUS=0x03
DHDCFLAGS += -DCUSTOM_ASSOC_RETRY_MAX=10
DHDCFLAGS += -DDHD_FW_COREDUMP
DHDCFLAGS += -DPCIE_BUS_IO
DHDCFLAGS += -DENABLE_TEMP_THROTTLING
DHDCFLAGS += -Idrivers/net/wireless/bcmdhd_4359 -Idrivers/net/wireless/bcmdhd_4359/include   \
	-Idrivers/net/wireless/bcmdhd_4359/common/include
DHDCFLAGS += -Wno-date-time
endif

bcmdhd-$(CONFIG_BCMDHD_SDIO) += \
		bcmsdh.o \
		bcmsdh_linux.o \
		bcmsdh_sdmmc.o \
		bcmsdh_sdmmc_linux.o \
		dhd_sdio.o \
		dhd_cdc.o \
		dhd_wlfc.o
bcmdhd-$(CONFIG_BCMDHD_PCIE) += \
		dhd_pcie.o \
		dhd_pcie_linux.o \
		dhd_msgbuf.o \
		dhd_log.o \
		circularbuf.o \
		pcie_core.o \
		dhd_flowring.o
ccflags-$(CONFIG_BCMDHD_SDIO) += \
	-DSDTEST -DBDC -DDHD_BCMEVENTS -DPROP_TXSTATUS -DOOB_INTR_ONLY \
	-DHW_OOB -DMMC_SDIO_ABORT -DBCMSDIO -DBCMLXSDMMC -DSDIO_CRC_ERROR_FIX \
	-DCUSTOM_SDIO_F2_BLKSIZE=128 -DUSE_SDIOFIFO_IOVAR
ccflags-$(CONFIG_BCMDHD_PCIE) += \
	-DPCIE_FULL_DONGLE -DBCMPCIE -DCUSTOM_DPC_PRIO_SETTING=-1 \
	-DSUPPORT_LINKDOWN_RECOVERY \
	-DBCMPCIE_DISABLE_ASYNC_SUSPEND \
	-DBCMPCIE_OOB_HOST_WAKE

